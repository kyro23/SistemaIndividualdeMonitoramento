<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.senai.sistemaindividualdemonitoramento.InitialActivity">


    <FrameLayout
        android:id="@+id/frame_sidebar"
        android:layout_width="270dp"
        android:layout_height="match_parent">

    </FrameLayout>

    <RelativeLayout
        android:layout_width="700dp"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            />

        <RelativeLayout
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="130dp">


            <Spinner
                android:id="@+id/spn_activity"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/spinner_shape"
                android:layout_marginTop="50dp"
                android:padding="10sp"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Relatório"
                android:layout_alignTop="@id/spn_activity"
                android:textSize="20sp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-30dp"
                android:textColor="#004f76"
                />

            <EditText
                android:id="@+id/mananger_report_date"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:background="@drawable/spinner_shape"
                android:padding="10sp"
                android:layout_marginTop="150dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data"
                android:layout_alignTop="@id/mananger_report_date"
                android:textSize="20sp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-30dp"
                android:textColor="#004f76"
                />

            <Button
                android:id="@+id/mananger_view_report"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/button_blue_shape"
                android:text="Exibir"
                android:textColor="#FFFF"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="250dp"/>
            <Button
                android:id="@+id/mananger_graphic"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/button_blue_shape"
                android:text="Gráficos"
                android:textColor="#FFFF"
                android:layout_alignParentRight="true"
                android:layout_marginTop="250dp"/>

        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>
