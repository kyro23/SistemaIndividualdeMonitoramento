<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.senai.sistemaindividualdemonitoramento.InitialActivity">


    <RelativeLayout
        android:layout_width="270dp"
        android:layout_height="match_parent"
        android:background="#004f76">



        <TextView
            android:id="@+id/sidebar_label_ordemProducao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Ordem de Produção"
            android:textColor="#FFFF"
            android:textSize="18sp"
            android:layout_marginTop="100dp"/>

        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_service_order"
            android:layout_centerHorizontal="true"
            android:layout_alignTop="@id/sidebar_label_ordemProducao"
            android:layout_marginTop="-60dp"/>

        <EditText
            android:id="@+id/sidebar_op_text"
            android:layout_width="160dp"
            android:layout_height="35dp"
            android:layout_alignBottom="@id/sidebar_label_ordemProducao"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-40dp"
            android:background="@drawable/text_shape"
            android:padding="10sp"
            android:textColor="#000000"
            android:textSize="18sp"
            />


        <TextView
            android:id="@+id/sidebar_label_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="230dp"
            android:text="Matricula"
            android:textColor="#FFFF"
            android:textSize="18sp" />


        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_user"
            android:layout_centerHorizontal="true"
            android:layout_alignTop="@id/sidebar_label_user"
            android:layout_marginTop="-60dp"/>

        <EditText
            android:id="@+id/sidebar_user_text"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:layout_alignBottom="@id/sidebar_label_user"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-40dp"
            android:background="@drawable/text_shape"
            android:padding="10sp"
            android:textColor="#000000"
            android:textSize="18sp" />




        <TextView
            android:id="@+id/sidebar_label_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="360dp"
            android:text="Senha"
            android:textColor="#FFFF"
            android:textSize="18sp" />


        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_password"
            android:layout_centerHorizontal="true"
            android:layout_alignTop="@id/sidebar_label_password"
            android:layout_marginTop="-60dp"/>
        <EditText
            android:id="@+id/sidebar_user_password"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:layout_alignBottom="@id/sidebar_label_password"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-40dp"
            android:background="@drawable/text_shape"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="#000000"
            android:textSize="18sp"
            />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="700dp"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            />

        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="130dp">


            <EditText
                android:id="@+id/employer_production"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:background="@drawable/spinner_shape"
                android:padding="10sp"
                android:layout_marginTop="40dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Produção"
                android:layout_alignTop="@id/employer_production"
                android:textSize="20sp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-30dp"
                android:textColor="#004f76"
                />

            <EditText
                android:id="@+id/employer_lost"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:background="@drawable/spinner_shape"
                android:padding="10sp"
                android:layout_marginTop="150dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Produção"
                android:layout_alignTop="@id/employer_lost"
                android:textSize="20sp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-30dp"
                android:textColor="#004f76"
                />

            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/button_blue_shape"
                android:text="Finalizar"
                android:textColor="#FFFF"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="250dp"/>

        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>
