<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.senai.sistemaindividualdemonitoramento.InitialActivity">


    <FrameLayout
        android:id="@+id/frame_sidebar"
        android:layout_width="270dp"
        android:layout_height="match_parent">

    </FrameLayout>


    <RelativeLayout
        android:layout_width="700dp"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            />

        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="130dp">


            <Spinner
                android:id="@+id/spn_activity"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/spinner_shape"
                android:layout_marginTop="50dp"
                android:padding="10sp"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Atividade"
                android:textSize="20dp"
                android:layout_alignTop="@id/spn_activity"
                android:layout_centerHorizontal="true"
                android:textColor="#004f76"
                android:layout_marginTop="-30dp"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="450dp"
            android:layout_height="140dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="80dp">

            <Button
                android:id="@+id/funcionario_button_start"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:text="InÃ­cio"
                android:background="@drawable/button_blue_shape"
                android:textColor="#FFFF"
                android:textSize="20sp"
                android:layout_alignParentLeft="true"/>

            <Button
                android:id="@+id/funcionario_button_pause"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:text="Pausa"
                android:background="@drawable/button_red_shape"
                android:textColor="#FFFF"
                android:textSize="20sp"
                android:layout_centerHorizontal="true"
                />

            <Button
                android:id="@+id/funcionario_button_end"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:text="Fim"
                android:background="@drawable/button_green_shape"
                android:textColor="#FFFF"
                android:textSize="20sp"
                android:layout_alignParentRight="true"
                />

        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>
