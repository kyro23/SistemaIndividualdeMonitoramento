<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.senai.sistemaindividualdemonitoramento.ManagerInitialActivity">
    <FrameLayout
        android:id="@+id/frame_sidebar"
        android:layout_width="270dp"
        android:layout_height="match_parent">

    </FrameLayout>

    <RelativeLayout
        android:layout_width="700dp"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:src="@drawable/ic_logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            />

        <Button
            android:id="@+id/manager_btn_gerenciarUsr"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/button_blue_shape"
            android:textColor="#FFFF"
            android:text="Gerenciar Usuários"
            android:layout_centerVertical="true"
            android:layout_marginLeft="120dp"/>

        <Button
        android:id="@+id/manager_btn_gerenciar_os"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/button_blue_shape"
        android:textColor="#FFFF"
        android:text="Gerenciar Ordem de Serviço"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

        <Button
            android:id="@+id/manager_btn_relatorios"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/button_blue_shape"
            android:textColor="#FFFF"
            android:text="Relatórios"
            android:layout_centerVertical="true"
            android:layout_marginLeft="480dp"/>

    </RelativeLayout>

</LinearLayout>
