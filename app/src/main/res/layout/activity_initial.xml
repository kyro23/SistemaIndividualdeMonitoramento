<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.senai.sistemaindividualdemonitoramento.InitialActivity">

    <FrameLayout
        android:id="@+id/frame_sidebar"
        android:layout_width="270dp"
        android:layout_height="match_parent">

    </FrameLayout>



    <RelativeLayout
        android:layout_width="700dp"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            />

        <Button
            android:id="@+id/button_login"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:text="Login"
            android:textSize="20sp"
            android:background="@drawable/button_green_shape"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            />
        <Button
            android:id="@+id/cadastro"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="Cadastrar Usuario"
            android:background="@drawable/button_green_shape"/>

        <Button
            android:id="@+id/visualizarFunc"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="Visualizar Funcionarios"
            android:background="@drawable/button_blue_shape"
            android:textColor="#FFFF"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

</LinearLayout>
